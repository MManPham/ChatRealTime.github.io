<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <link rel="icon" href="StoreImg/messages_5122x.png" />
  <title>Chat Web</title>

  <!-- Bootstrap core CSS -->
  <link href="Framework/Css/bootstrap.min.css" rel="stylesheet" />
  <!-- Custom styles for this template -->
  <link href="MainStyle/Sign-in.css" rel="stylesheet" />
  <link type="text/css" href="./MainStyle/Chat.css" rel="stylesheet" />
  <!-- Font awesome  -->
  <link href="Framework/font-awesome/css/font-awesome.css" rel="stylesheet" />
</head>

<body>


  <div class="form-signin  card-wrapper">
    <div class="brand" style="width:100%; text-align:center">
      <img class="mb-4" src="StoreImg/messages_5122x.png" alt="" width="100" height="100">
    </div>
    <div class="card fat">
      <div class="card-body">
        <h4 class="card-title">Register</h4>
        <form method="POST" action="/register">
          <div class="form-group">
            <label for="nameUser">Name User</label>
            <input id="nameUser" type="text" class="form-control" name="nameUser" required autofocus>
          </div>


          <div class="form-group">
            <label for="email" style="width:100%">Email
          </label>
            <input id="email" type="email" class="form-control" name="email" required data-eye>
          </div>

          <div class="form-group">
            <label for="password" style="width:100%">Password
          </label>
            <input id="password" type="password" class="form-control" name="password" required data-eye>
          </div>

          <div class="form-group">
            <label>
            <input type="checkbox" name="remember"> I agree to the Terms and Conditions
          </label>
          </div>

          <div class="form-group no-margin">
            <button id="Signin" type="submit" data-toggle="modal" data-target="#myModal" class="btn btn-primary btn-block">
            Register
          </button>
          </div>
          <div class="margin-top20 text-center">
            Come back Login! <a href="/">Login</a>
          </div>
        </form>
      </div>
    </div>
    <p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2018</p>
  </div>

  <!-- The Modal -->
  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
          <h3 class="modal-title">Register Success</h3>
        </div>
        <!-- Modal body -->
        <div class="modal-body">
          <h4>Come back <a href="/">Signin</a> </h4>
        </div>
        <!-- Modal footer -->
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript
      ================================================== -->
  <!-- Frame work js -->
  <script src="Framework/Js/jquery-3.2.1.min.js"></script>
  <script src="Framework/Js/bootstrap.js"></script>

  </script>

  <!-- Main js -->
  <script src="Js/Register.js"></script>
</body>

</html>